{
"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "app_service_plan_id": {
      "type": "string",
      "metadata": {
        "description": "App Service Plan ID"
      }
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "App Name"
      }
    },
    "image": {
      "type": "string",
      "metadata": {
        "description": "Docker image"
       }
     },
     "ENDPOINT_STORAGE_ACCOUNT": {
       "type": "string",
       "metadata": {
         "description": "Endpoint Storage Account"
        }
      },
      "ENDPOINT_STORAGE_KEY": {
        "type": "string",
        "metadata": {
          "description": "Endpoint Storage Key"
        }
      },
       "ENDPOINT_CONTAINER": { 
         "type": "string", 
          "metadata": {
           "description": "Endpoint Container"
        }
      },
	"ENDPOINT_SECRET_KEY": {
          "type": "string",
          "metadata": {
            "description": "Endpoint Secret Key"
       }
     }
 },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "kind": "app,linux,container",
      "name": "[parameters('name')]",
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name" : "WEBSITE_HTTPLOGGING_RETENTION_DAYS",
              "value": "1"
            },
            { 
	      "name": "ENDPOINT_STORAGE_ACCOUNT", 
              "value": "[parameters('ENDPOINT_STORAGE_ACCOUNT')]"
            },
            {
              "name": "ENDPOINT_STORAGE_KEY",
              "value": "[parameters('ENDPOINT_STORAGE_KEY')]"
             },
             {
              "name": "ENDPOINT_CONTAINER",
              "value": "[parameters('ENDPOINT_CONTAINER')]"
              },
              { 
               "name": "ENDPOINT_SECRET_KEY",
               "value": "[parameters('ENDPOINT_SECRET_KEY')]"
              }
          ],
          "linuxFxVersion": "[concat('DOCKER|', parameters('image'))]"
        },
        "name": "[parameters('name')]",
        "serverFarmId": "[parameters('app_service_plan_id')]"
       },
      "apiVersion": "2016-08-01",
      "location": "[resourceGroup().location]"
    }
  ]
}
